<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".get_toll_details_between_two_stations">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/source_textview"
        android:text="     Source"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"/>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sourcespinner"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/source_textview"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destination_textview"
        android:text="     Destination"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"/>

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/destinationspinner"
        android:layout_below="@+id/destination_textview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destinationspinner"
        android:id="@+id/main_vehicle_type"
        android:text="    Vehicle Type"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_drive_eta_24" />

    <Spinner
        android:layout_marginTop="20dp"
        android:id="@+id/main_vehicle_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/main_vehicle_type">
    </Spinner>

    <Button
        android:id="@+id/letsgo_btn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_vehicle_type_spinner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="120dp"
        android:backgroundTint="@color/purple_500"
        android:padding="20dp"
        android:text="Lets Go"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />


</LinearLayout>